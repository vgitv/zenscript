#!/bin/bash
set -euo pipefail

str1='##'
str2='  '

# standard and high intensity colors
for i in {0..15}; do
    printf "%4d" "$i"
    printf "\x1b[38;5;%sm${str1}\e[0m" "$i"
    printf "\x1b[48;5;%sm${str2}\e[0m" "$i"
    if [[ $i -eq 7 ]]; then
        printf "\n"
    fi
done

printf "\n\n"

# 216 colors
for i in {16..231}; do
    printf "%4d" "$i"
    printf "\x1b[38;5;%sm${str1}\e[0m" "$i"
    printf "\x1b[48;5;%sm${str2}\e[0m" "$i"
    if (( ($i - 15) % 6 == 0 )); then
        printf "\n"
        if [[ $i -eq 51 || $i -eq 87  || $i -eq 123 || $i -eq 159 || $i -eq 195 || $i -eq 231 ]]; then
            printf "\n"
        fi
    fi
done

# shades of grey
for i in {232..255}; do
    printf "%4d" "$i"
    printf "\x1b[38;5;%sm${str1}\e[0m" "$i"
    printf "\x1b[48;5;%sm${str2}\e[0m" "$i"
    if (( ($i - 231) % 8 == 0 )); then
        printf "\n"
    fi
done
