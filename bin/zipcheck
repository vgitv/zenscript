#!/bin/bash
set -euo pipefail

# check corrupted zip in directory
#
# Arguments
#   location : dossier Ã  parcourir
#
# Exemple
#   zipcheck .

location="$(realpath "$1")"

for archive in ${location}/*.zip; do
    if zipinfo "${archive}" > /dev/null 2>&1; then
        true
    else
        echo "Archive $(basename "${archive}") corrompue"
    fi
done
