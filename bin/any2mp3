#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

here="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# shellcheck source=/dev/null
source "$here/../lib/logging.sh"

format='flac'
if [[ $1 =~ ^--format= ]]; then
    format="${1/--format=/}"
    shift
fi

function convert2mp3 {
    local format="$1"
    local src="$2"
    local target="$3"

    local filename

    filename="$(basename "$src")"
    output="${filename//.${format}/.mp3}"
    # -fps_mode vfr : argument to avoid following warning
    #     Frame rate very high for a muxer not efficiently supporting it.
    #     Please consider specifying a lower framerate, a different muxer or
    #     setting vsync/fps_mode to vfr
    # -ar 48000 : 48 kHz
    # -ac 2 : two audio channels
    # -b:a 192k : 192 kbps
    # ffmpeg -i 01_je_ne_te_vois_plus.flac -fps_mode vfr -ar 44100 -ac 2 -b:a 192k out5.mp3
    ffmpeg -i "$src" -fps_mode vfr -ar 48000 -ac 2 -b:a 192k "${target}/${output}"
}

export -f convert2mp3

args=("$@")
dest="${args[-1]}"
while [[ $# -gt 1 ]]; do
    srcdir="$1" && shift
    if [[ ! -d "$srcdir" ]]; then
        error "Argument ${srcdir} should be a directory!"
    fi
    log info "copy ${srcdir} to ${dest}"
    target="${dest}/$(basename "${srcdir}")"
    mkdir -p "$target"
    find "$srcdir" -type f -name "*.${format}" -exec bash -c 'convert2mp3 $1 $2 $3' shell "${format}" {} "${target}" \;
done
