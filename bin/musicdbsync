#!/bin/bash
set -euo pipefail

# default value either /media or /run/media
dest="${1:-/run/media/${USER}/USB/MUSIC}"

# source directory
database="${HOME}/Musique/_database_"

if [[ -d $dest ]]; then
    echo "Dest dir: ${dest}"
else
    echo "Dest dir do not exists: ${dest}"
    exit 1
fi

rsync -arvh --delete "${database}" "${dest}"

echo -e "\nSaved in ${dest}"
echo 'WELL DONE !!'
