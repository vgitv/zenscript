#!/bin/bash
set -euo pipefail

powerPath='/sys/class/power_supply/BAT0'

if [[ -e "${powerPath}" ]]; then
	status="$(cat "${powerPath}/status")"
    case "$status" in
        "Full")         status='+' ;;
        "Discharging")  status='â†“' ;;
        "Charging")     status='â†‘' ;;
		"Not charging") status='/' ;;
		"Unknown")      status='?' ;;
	esac
    battery="ðŸ”‹ ${status}$(cat "${powerPath}/capacity")%"
else
    battery='âš¡ sect'
fi

echo -n "${battery}"
