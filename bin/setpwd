#!/bin/bash
set -euo pipefail

# default options
prefix='__'
suffix='__'

while getopts 'p:s:f:o:' flag; do
    case "${flag}" in
        p) prefix="${OPTARG}" ;;
        s) suffix="${OPTARG}" ;;
        f) pwdFile="${OPTARG}" ;;
        o) outFile="${OPTARG}" ;;
    esac
done

while IFS= read -r line; do
    key="${prefix}$(echo ${line} | cut -d '=' -f 1)${suffix}"
    val="$(echo ${line} | cut -d '=' -f 2- | base64 -d)"
    sed -i "s/${key}/${val}/g" "${outFile}"
done < "${pwdFile}"
