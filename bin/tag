#!/bin/bash
set -euo pipefail

function sanitize {
    echo "${1,,}" | sed -E \
        -e 's/Œ/OE/g' \
        -e 's/œ/oe/g' \
        -e 's/Ç/C/g' \
        -e 's/ç/c/g' \
        -e 's/(Á|À|Ä|Â)/A/g' \
        -e 's/(á|à|ä|â)/a/g' \
        -e 's/(É|È|Ë|Ê)/E/g' \
        -e 's/(é|è|ë|ê)/e/g' \
        -e 's/(Í|Ì|Ï|Î)/I/g' \
        -e 's/(í|ì|ï|î)/i/g' \
        -e 's/(Ó|Ò|Ö|Ô)/O/g' \
        -e 's/(ó|ò|ö|ô)/o/g' \
        -e 's/(Ú|Ù|Ü|Û)/U/g' \
        -e 's/(ú|ù|ü|û)/u/g' \
        -e 's/\s+/-/g' \
        -e "s/[!\.\?\*']/-/g"
}

