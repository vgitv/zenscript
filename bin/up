#!/bin/bash
set -euo pipefail

sudo su

echo `date` > $HOME/.opt/log/up.log

echo -e "\n# update..."
echo '# apt-get update' >> $HOME/.opt/log/up.log
apt-get -y update >> $HOME/.opt/log/up.log 2>&1

echo -e "\n# upgrade..."
echo '# apt-get upgrade' >> $HOME/.opt/log/up.log
apt-get -y upgrade >> $HOME/.opt/log/up.log 2>&1

echo -e "\nDone ! Log file save in $HOME/.opt/log/up.log"
