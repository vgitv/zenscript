#!/bin/bash
set -euo pipefail

# Update system. Store log file in $HOME/.opt/log/up.log

echo `date` > $HOME/.opt/log/up.log

echo '# update...'
echo '# apt-get update' >> $HOME/.opt/log/up.log
apt-get update >> $HOME/.opt/log/up.log 2>&1

echo "\n# upgrade..."
echo '# apt-get upgrade' >> $HOME/.opt/log/up.log
apt-get upgrade >> $HOME/.opt/log/up.log 2>&1

echo "\nDone ! Log file save in $HOME/.opt/log/up.log"
